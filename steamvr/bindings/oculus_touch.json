{
  "action_manifest_version": 1,
  "app_key": "com.vrchat.osc.keyboard",
  "controller_type": "oculus_touch",
  "description": "Default binding for Oculus Touch controllers",
  "bindings": {
    "/actions/vrkb2": {
      "sources": [
        {
          "path": "/user/hand/right/input/trigger/click",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/vrkb2/in/trigger_click"
            }
          }
        },
        {
          "path": "/user/hand/left/input/trigger/click",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/vrkb2/in/trigger_click"
            }
          }
        },
        {
          "path": "/user/hand/right/input/grip/click",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/vrkb2/in/grip_click"
            }
          }
        },
        {
          "path": "/user/hand/left/input/grip/click",
          "mode": "button",
          "inputs": {
            "click": {
              "output": "/actions/vrkb2/in/grip_click"
            },
            "double": {
              "output": "/actions/vrkb2/in/toggle_overlay"
            }
          }
        }
      ]
    }
  }
}

